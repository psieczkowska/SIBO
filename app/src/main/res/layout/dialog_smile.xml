<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_dialog_rounded"
        app:cardCornerRadius="@dimen/dialog_member_cv_cornerRadius"
        app:cardElevation="@dimen/dialog_member_cv_elevation">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dialog_member_content_padding">

            <TextView
                android:id="@+id/tv_meal_wellbeing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/btn_paddingTopBottom"
                android:text="@string/meal"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_date_wellbeing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/btn_paddingTopBottom"
                android:text="@string/Date"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/btn_paddingTopBottom"
                android:text="@string/choose_emoticon" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/the_best_button"
                        android:layout_width="@dimen/button_smile_size"
                        android:layout_height="@dimen/button_smile_size"
                        android:background="#00FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_the_best_40" />

                    <ImageButton
                        android:id="@+id/good_button"
                        android:layout_width="@dimen/button_smile_size"
                        android:layout_height="@dimen/button_smile_size"
                        android:background="#00FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_good_40" />

                    <ImageButton
                        android:id="@+id/ok_button"
                        android:layout_width="@dimen/button_smile_size"
                        android:layout_height="@dimen/button_smile_size"
                        android:background="#00FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_ok_40" />

                    <ImageButton
                        android:id="@+id/sad_button"
                        android:layout_width="@dimen/button_smile_size"
                        android:layout_height="@dimen/button_smile_size"
                        android:background="#00FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_sad_40" />

                    <ImageButton
                        android:id="@+id/cry_button"
                        android:layout_width="@dimen/button_smile_size"
                        android:layout_height="@dimen/button_smile_size"
                        android:background="#00FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_cry_40" />

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>